{% extends 'base.html.twig' %}

{% block title %}Cinema{% endblock %}

{% block body %}
    <h1>Cinema</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cinema.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cinema.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ cinema.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ cinema.telephone }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ cinema.horaire }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ cinema.createdAt ? cinema.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ cinema.updatedAt ? cinema.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cinema_index') }}">back to list</a>

    <a href="{{ path('app_cinema_edit', {'id': cinema.id}) }}">edit</a>

    {{ include('cinema/_delete_form.html.twig') }}
{% endblock %}
