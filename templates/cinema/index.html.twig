{% extends 'base.html.twig' %}

{% block title %}Cinema index{% endblock %}

{% block body %}
    <h1>Cinema index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Telephone</th>
            <th>Horaire</th>
        </tr>
        </thead>
        <tbody>
        {% for cinema in cinemas %}
            <tr>
                <td>{{ cinema.id }}</td>
                <td>{{ cinema.nom }}</td>
                <td>{{ cinema.adresse }}</td>
                <td>{{ cinema.telephone }}</td>
                <td>{{ cinema.horaire }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
