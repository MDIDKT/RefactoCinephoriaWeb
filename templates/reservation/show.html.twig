{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ reservation.id }}</td>
        </tr>
        <tr>
            <th>NombrePlace</th>
            <td>{{ reservation.nombrePlace }}</td>
        </tr>
        <tr>
            <th>PrixTotal</th>
            <td>{{ reservation.prixTotal }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ reservation.status ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>QRCode</th>
            <td>{{ reservation.QRCode }}</td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
