{% extends 'base.html.twig' %}

{% block title %}Reservations index{% endblock %}

{% block body %}

    <div class="flex items-center justify-center min-h-screen">
        <div class="max-w-4xl bg-gray-200 p-6 rounded-lg">
            <h1 class="text-2xl font-bold mb-4 text-center">Vos réservations</h1>
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead class="bg-white border-b">
                <tr>
                    <th class="py-2 px-4 text-left">Places</th>
                    <th class="py-2 px-4 text-left">Prix Total</th>
                    <th class="py-2 px-4 text-left">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr class="border-b border-gray-300">
                        <td class="py-2 px-4">{{ reservation.nombrePlaces }}</td>
                        <td class="py-2 px-4">{{ reservation.prixTotal }}</td>
                        <td class="py-2 px-4 flex space-x-4">
                            <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}"
                               class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Voir</a>
                            <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}"
                               class="bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600">Modifier</a>
                            {{ include('reservations/_delete_form.html.twig', { 'btn_classes': 'bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600' }) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="py-2 px-4 text-center">Aucune réservations</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}