{% extends 'base.html.twig' %}

{% block title %}Modifier la réservation{% endblock %}

{% block body %}
    <div class="bg-gray-200 p-6 rounded-lg mx-auto mt-8" style="max-width: 600px;">
        <h1 class="text-2xl text-blue-50 font-bold mb-4 flex justify-center">Modifier la réservation</h1>
        <form method="post" action="{{ path('app_reservations_edit', {'id': reservation.id}) }}" onsubmit="return confirm('Valider la modification de votre reservation?');">
            {{ form_widget(form) }}
            <button class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 mt-4">
                Valider
            </button>
        </form>
    </div>

    <div class="flex justify-center mt-4">
        <a href="{{ path('app_reservations_index') }}" class="text-blue-500 hover:underline">Retour à la liste</a>
    </div>
{% endblock %}